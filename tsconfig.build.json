// This is the entry point when building all modules for distribution
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Uncomment to debug
    // "listEmittedFiles": true
  },
  "references": [
    {"path": "modules/api"},
    {"path": "modules/constants"},
    {"path": "modules/core"},
    {"path": "modules/debug"},
    {"path": "modules/engine"},
    {"path": "modules/experimental"},
    {"path": "modules/gltools"},
    {"path": "modules/shadertools"},
    {"path": "modules/test-utils"},
    {"path": "modules/webgl"},
    {"path": "modules/webgl-legacy"},
    {"path": "modules/webgpu"}
  ],
  "include": [
    "modules/*/src"
  ],
  "exclude": [
    "modules/*/src/libs",
    "examples",
    "test",
    "scripts",
    "modules/*/wip",
    "modules/*/bin",
    "modules/*/wip",
    "modules/*/test",
    "modules/*/dist"
  ]
}
